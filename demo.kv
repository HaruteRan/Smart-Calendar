    name: "input"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "data/input_bg.png"


    FloatLayout:

        Button:
            text: "Crete Time Slot"
            size_hint: 0.4, 0.1
            pos_hint: {'center_x':.5, 'center_y':.3}
