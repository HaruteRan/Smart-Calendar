#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<RootScreen>:
    transition: FadeTransition()
    LoginScreen:
    UserScreen
    SearchScreen:
    CalendarScreen:
    InputScreen:


<LoginScreen>:
    name: "login"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "data/login_bg.png"

    FloatLayout:
        Label:
            text: "App Login"
            font_size: 40
            pos_hint: {'center_x':.5, 'center_y':.85}

        Button:
            text: 'Login'
            pos_hint: {'center_x':.5, 'center_y':.15}
            size_hint: 0.3, 0.1
            on_release: root.check_login()

        Label:
            text: "Name: "
            font_size: 25
            pos_hint: {'center_x':.25, 'center_y':.7}

        Label:
            text: "ID: "
            font_size: 25
            pos_hint: {'center_x':.25, 'center_y':.6}


<UserScreen>:
    name: "user"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "data/user_bg.png"

    FloatLayout:
        Button:
            id: btn
            text: 'Screen List'
            on_release: switch.open(self)
            size_hint: 0.25, 0.1
            pos_hint: {'center_x':.85, 'center_y':.1}

        Widget:
            on_parent: switch.dismiss()

        DropDown:

            id: switch
            on_select: root.manager.current = args[1]

            Button:
                text: 'calendar'
                size_hint_y: None
                height: '48dp'
                on_release: switch.select('calendar')

            Button:
                text: 'input'
                size_hint_y: None
                height: '48dp'
                on_release: switch.select('input')

            Button:
                text: 'search'
                size_hint_y: None
                height: '48dp'
                on_release: switch.select('search')

            Button:
                text: 'user'
                size_hint_y: None
                height: '48dp'
                on_release: switch.select('user')


