<InputScreen>:
    name: "input"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "data/input_bg.png"


    FloatLayout:

        Button:
            text: "Crete Time Slot"
            size_hint: 0.4, 0.1
            pos_hint: {'center_x':.5, 'center_y':.3}
            font_size: 30
            on_release: root.send_data()

        Label:
            text: "Course Subject: "
            font_size: 25
            pos_hint: {'center_x':.25, 'center_y':.8}
        Label:
            text: "Course Number: "
            font_size: 25
            pos_hint: {'center_x':.25, 'center_y':.7}
        Label:
            text: "Start Time: "
            font_size: 25
            pos_hint: {'center_x':.25, 'center_y':.6}
        Label:
